{
  "name": "nest-template",
  "version": "0.1.1",
  "description": "Nest.js is based on Fastify and TypeORM setup",
  "author": {
    "name": "broodd",
    "email": "svyatddev@gmail.com",
    "url": "https://github.com/broodd"
  },
  "private": true,
  "homepage": "https://github.com/broodd/nest-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/broodd/nest-template.git"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "typeorm:create:migration": "npm run typeorm:cli -- migration:create -d src/database/migrations -n",
    "doc": "npm run doc:generate -- -s",
    "doc:generate": "npx @compodoc/compodoc -p tsconfig.json -d docs --theme laravel",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.7.1",
    "@nestjs/bull": "^0.5.5",
    "@nestjs/common": "^8.4.7",
    "@nestjs/core": "^8.4.7",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/microservices": "^8.4.7",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-fastify": "^8.4.7",
    "@nestjs/platform-socket.io": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.1.1",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/typeorm": "^8.1.4",
    "@nestjs/websockets": "^8.4.7",
    "aws-sdk": "^2.1168.0",
    "axios": "^0.27.2",
    "cache-manager": "^4.0.1",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "fastify-compress": "^4.1.0",
    "fastify-helmet": "^7.1.0",
    "fastify-multipart": "^5.4.0",
    "fastify-swagger": "^5.2.0",
    "firebase-admin": "^11.0.0",
    "handlebars": "^4.7.7",
    "nodemailer": "^6.7.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/bull": "^3.15.8",
    "@types/busboy": "^1.5.0",
    "@types/cache-manager": "^4.0.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/database/migrations/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "compodoc": {
    "open": true,
    "hideGenerator": true,
    "output": "./public",
    "tsconfig": "./tsconfig.json",
    "unitTestCoverage": "./coverage/coverage-summary.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint -- --cache",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  }
}